#!/bin/bash

BIN=/usr/bin/brave-browser

# Cleanup
if pgrep brave > /dev/null;then
  rm -f $HOME/.config/BraveSoftware/Brave-Browser/Singleton*
fi

${BIN} \
  --no-first-run \
  --no-sandbox \
  --password-store=basic \
  --simulate-outdated-no-au='Tue, 31 Dec 2099 23:59:59 GMT' \
  --start-maximized \
  --test-type \
  --user-data-dir \
   "$@" > /dev/null 2>&1
